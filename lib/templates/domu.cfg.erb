#
# Configuration file for the Xen instance <%= name %>, created
# by ruby-xen on <%= Time.now %>.
#

#
#  Kernel + memory size
#
kernel      = '<%= kernel %>'
ramdisk     = '<%= ramdisk %>'
memory      = '<%= memory %>'

#
#  Disk device(s).
#
root        = '<%= root %>'
disk        = [ 
	'<%= Array(disk).join("',\n\t'") %>' 
]

#
#  Hostname
#
name        = '<%= name %>'

#
#  Networking
#
vif         = [
	'<%= Array(vif).join("',\n\t'") %>'
]

#
#  Behaviour
#
on_poweroff = '<%= on_poweroff %>'
on_reboot   = '<%= on_reboot %>'
on_crash    = '<%= on_crash %>'

extra = '<%= extra %>'